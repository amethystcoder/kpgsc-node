<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advertisements</title>
    <link rel="stylesheet" href="./static/common_styles.css">
    <link rel="stylesheet" href="./static/ads.css">
    <script>
        window.addEventListener("DOMContentLoaded",(ev)=>{
            const popAdCreate = document.querySelector(".pop-ad-create")
            popAdCreate.addEventListener("submit",async (ev)=>{
                ev.preventDefault()
                let formdata = new FormData(popAdCreate)                
                let data = {
                    title:Date.now().toString(),
                    type:"popads",
                    xml_file:formdata.get("ad"),
                    start_offset:0,
                }
                try{
                    let dataResult = await fetch("../api/vast_ads/create",{
                        method:"POST",
                        body:JSON.stringify(data)
                    })
                }
                catch(error){
                    console.log(error)
                }
            })
            const vastAdCreate = document.querySelector(".vast-ad-create")
            vastAdCreate.addEventListener("submit",async (ev)=>{
                ev.preventDefault()
                let formdata = new FormData(vastAdCreate)
                let data = {
                    title:formdata.get("title"),
                    type:formdata.get("type"),
                    xml_file:formdata.get("xml-file"),
                    start_offset:formdata.get("start-offset"),
                }
                try{
                    let dataResult = await fetch("../api/vast_ads/create",{
                        headers:{
                            "Content-Type":"application/json"
                        },
                        method:"POST",
                        body:JSON.stringify(data)
                    })
                    location.reload()
                }
                catch(error){
                    console.log(error)
                }
            })
        })
        async function deleteAd(id){
            try {
                    let result = await fetch(`../api/ads/${id}`,{
                    headers:{
                        "Content-Type":"application/json"
                    },
                    method:"DELETE"
                }) 
                location.reload()
            } catch (error) {
                console.log(error)
            }
        }
        function editSpecific(id,section){
            let value = document.getElementById(id+section).innerText
            console.log(value)
            fetch(`../api/ads/edit/${id}`,{
                    headers:{
                        "Content-Type":"application/json"
                    },
                    body:JSON.stringify({
                        name:section,
                        value:value
                    }),
                    method:"PATCH"
                }).then(Response=>Response.json())
                .then(body=>{
                    if(body.success){
                        window.location.reload()
                    }
                })
                .catch(error=>{console.log(error)})
        }
        function editAd(id){}
    </script>
</head>
<body>
    <div class="side-div">
        <%- include('./sections/nav')%>
    </div>
    <main>
        <%- include('./sections/header')%>
        <div class="contains-ad-list">
            <h2>ad List</h2>
            <table>
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Type</td>
                        <td>XML File Link</td>
                        <td>Offset</td>
                        <td>Options</td>
                    </tr>
                </thead>
                <tbody>
                    <% ads.forEach((ad)=>{ %>
                        <tr>
                            <td contenteditable="true" oninput="editSpecific('<%= ad.id %>','title')" id="<%= ad.id %>title"><%=ad.title%></td>
                            <td contenteditable="true" oninput="editSpecific('<%= ad.id %>','type')" id="<%= ad.id %>type"><%=ad.type%></td>
                            <td contenteditable="true" oninput="editSpecific('<%= ad.id %>','xml_file')" id="<%= ad.id %>xml_file"><%=ad.xml_file%></td>
                            <td contenteditable="true" oninput="editSpecific('<%= ad.id %>','start_offset')" id="<%= ad.id %>start_offset"><%=ad.start_offset%></td>
                            <td class="bar">
                                <svg onclick="editServer('<%=ad.id%>')" xmlns="http://www.w3.org/2000/svg"  
                                viewBox="0 0 50 50" width="20px" height="20px">
